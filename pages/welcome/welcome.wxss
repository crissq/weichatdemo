page{
  background-color: #b3d4db;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}
.user-name{
  font-size: 32rpx;
  font-weight: bold;
}
.moto{
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}
.moto-container{
  border: 1rpx solid #808080;
  height: 80rpx;
  width: 200rpx;
  border-radius: 5rpx;
  text-align: center;
  margin-top: 200rpx;
}
